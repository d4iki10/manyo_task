<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  </head>

  <body>
    <div class='container'>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="btn-group">
          <li class="navbar-brand mb-0 h1"><%= link_to 'Task App', admin_users_path, id: 'users-index', class: "nav-link" %></li>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if logged_in? %>
              <% if current_user.admin? %>
                <li class="nav-item active"><%= link_to 'ユーザ一覧', admin_users_path, id: 'users-index', class: "nav-link" %></li>
                <li class="nav-item active"><%= link_to 'ユーザを登録する', new_admin_user_path, id: 'add-user', class: "nav-link" %></li>
              <% end %>
              <li class="nav-item active"><%= link_to 'タスク一覧', tasks_path, id: 'tasks-index', class: "nav-link" %></li>
              <li class="nav-item active"><%= link_to 'タスクを登録する', new_task_path, id: 'new-task', class: "nav-link" %></li>
              <li class="nav-item active"><%= link_to 'ラベル一覧', labels_path, id: 'labels-indexr', class: "nav-link" %></li>
                <li class="nav-item active"><%= link_to 'ラベルを登録する', new_label_path, id: 'new-label', class: "nav-link" %></li>
              <li class="nav-item active"><%= link_to 'アカウント設定', user_path(current_user), id: 'account-setting', class: "nav-link" %></li>
              <li class="nav-item active"><%= link_to 'ログアウト', session_path(current_user), method: :delete, id: 'sign-out', class: "nav-link" %></li>
            <% else %>
              <li class="nav-item active"><%= link_to 'アカウント登録', new_user_path, id: 'sign-up', class: "nav-link" %></li>
              <li class="nav-item active"><%= link_to 'ログイン', new_session_path, id: 'sign-in', class: "nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
      <!-- バリデーションメッセージを共通表示 -->
      <% if (defined?(@user) && @user&.errors&.any?) || (defined?(@task) && @task&.errors&.any?) %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% if @user&.errors&.any? %>
              <% @user.errors.full_messages.each do |message| %>
                <li class="nav-item active"><%= message.gsub(' ', '') %></li>
              <% end %>
            <% end %>
            <% if @task&.errors&.any? %>
              <% @task.errors.full_messages.each do |message| %>
                <li class="nav-item active"><%= message.gsub(' ', '') %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      <% end %>
      <!-- フラッシュメッセージの共通表示 -->
      <% flash.each do |key, message| %>
        <div class="flash <%= key %> alert alert-danger">
          <li class="nav-item active"><%= message.gsub(' ', '') %></li>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
