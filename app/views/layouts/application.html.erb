<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if logged_in? %>
        <%= link_to 'タスク一覧', tasks_path %>
        <%= link_to 'タスクを登録する', new_task_path %>
        <%= link_to 'アカウント設定', user_path(current_user), id: 'account-setting' %>
        <% if current_user.admin? %>
          <%= link_to 'ユーザ一覧', admin_users_path, id: 'users-index' %>
          <%= link_to 'ユーザを登録', new_admin_user_path, id: 'add-user' %>
        <% end %>
        <%= link_to 'ログアウト', session_path, method: :delete, id: 'sign-out' %>
      <% else %>
        <%= link_to 'アカウント登録', new_user_path, id: 'sign-up' %>
        <%= link_to 'ログイン', new_session_path, id: 'sign-in' %>
      <% end %>
    </nav>

    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% elsif flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
