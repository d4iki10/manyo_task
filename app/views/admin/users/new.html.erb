<h1>ユーザ登録ページ</h1>

<%= form_with(model: @user, url: admin_users_path, local: true) do |form| %>
    <div class="form-group">
        <%= form.label :name, '名前', class: 'form-label' %><br>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :email, 'メールアドレス', class: 'form-label' %><br>
        <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :password, 'パスワード', class: 'form-label' %><br>
        <%= form.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :password_confirmation, 'パスワード（確認）', class: 'form-label' %><br>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :admin, '管理者権限', class: 'form-label' %><br>
        <%= form.check_box :admin %>
    </div>
    <%= form.submit '登録する', id: 'create-user', class: 'btn btn-primary' %>
    <%= link_to t('tasks.edit.back'), admin_users_path, id: 'back', class: 'btn btn-secondary' %>
<% end %>
