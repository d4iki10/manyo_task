<h1>ユーザ登録ページ</h1>

<%= form_with(model: [:admin, @user], local: true) do |form| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :name, '名前' %><br>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :email, 'メールアドレス' %><br>
        <%= form.email_field :email %>
    </div>

    <div>
        <%= form.label :password, 'パスワード' %><br>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.label :password_confirmation, 'パスワード（確認）' %><br>
        <%= form.password_field :password_confirmation %>
    </div>

    <div>
        <%= form.label :admin, '管理者権限' %><br>
        <%= form.check_box :admin %>
    </div>

    <div>
        <%= form.submit '登録する', id: 'create-user' %>
    </div>
<% end %>
