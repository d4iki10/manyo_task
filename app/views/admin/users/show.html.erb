<h1 class="h1">ユーザ詳細ページ</h1>

<dl class="row">
    <dt class="col-sm-2">名前:</dt>
    <dd class="col-sm-10"><%= @user.name %></dd>
    <dt class="col-sm-2">メールアドレス:</dt>
    <dd class="col-sm-10"><%= @user.email %></dd>
    <dt class="col-sm-2">管理者権限:</dt>
    <dd class="col-sm-10"><%= @user.admin? ? 'あり' : 'なし' %></dd>
</dl>

<table class="table">
    <thead>
        <tr>
            <th scope="col">タイトル</th>
            <th scope="col">内容</th>
            <th scope="col">作成日時</th>
            <th scope="col">終了期限</th>
            <th scope="col">優先度</th>
            <th scope="col">ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @user.tasks.each do |task| %>
        <tr>
            <td scope="row"><%= task.title %></td>
            <td><%= task.content %></td>
            <td><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= task.deadline_on %></td>
            <td><%= task.priority_i18n %></td>
            <td><%= task.status_i18n %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to '戻る', admin_users_path, id: 'back' %>
