<h1>ユーザ編集ページ</h1>

<%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true) do |form| %>
    <div class="form-group">
        <%= form.label :name, t('activerecord.attributes.user.name'), class: 'form-label' %><br>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :email, t('activerecord.attributes.user.email'), class: 'form-label' %><br>
        <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :password, t('activerecord.attributes.user.password'), class: 'form-label' %><br>
        <%= form.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: 'form-label' %><br>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :admin, t('activerecord.attributes.user.admin'), class: 'form-label' %><br>
        <%= form.check_box :admin %>
    </div>
    <%= form.submit t('tasks.edit.update_task'), id: 'update-user', class: 'btn btn-primary' %>
    <%= link_to t('tasks.edit.back'), admin_users_path, id: 'back', class: 'btn btn-secondary' %>
<% end %>
