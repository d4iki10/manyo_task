<h1>ユーザ編集ページ</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message.gsub(' ', '') %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |form| %>
    <p>
        <%= form.label :name, '名前' %><br>
        <%= form.text_field :name %>
    </p>

    <p>
        <%= form.label :email, 'メールアドレス' %><br>
        <%= form.email_field :email %>
    </p>

    <p>
        <%= form.label :password, 'パスワード' %><br>
        <%= form.password_field :password %>
    </p>

    <p>
        <%= form.label :password_confirmation, 'パスワード（確認）' %><br>
        <%= form.password_field :password_confirmation %>
    </p>

    <p>
        <%= form.label :admin, '管理者権限' %><br>
        <%= form.check_box :admin %>
    </p>

    <p>
        <%= form.submit '更新する', id: 'update-user' %>
    </p>
<% end %>
<%= link_to '戻る', admin_users_path, id: 'back' %>
