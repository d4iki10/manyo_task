<h1>ユーザ編集ページ</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message.gsub(' ', '') %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: [:admin, @user],method: :patch, local: true) do |form| %>
    <p>
        <%= form.label :name, t('name') %><br>
        <%= form.text_field :name %>
    </p>

    <p>
        <%= form.label :email, t('email') %><br>
        <%= form.email_field :email %>
    </p>

    <p>
        <%= form.label :password, t('password') %><br>
        <%= form.password_field :password %>
    </p>

    <p>
        <%= form.label :password_confirmation, t('password_confirmation') %><br>
        <%= form.password_field :password_confirmation %>
    </p>

    <p>
        <%= form.label :admin, t('admin') %><br>
        <%= form.check_box :admin %>
    </p>

    <p>
        <%= form.submit t('edit.update_task'), id: 'update-user' %>
    </p>
<% end %>
<%= link_to t('edit.back'), admin_users_path, id: 'back' %>
