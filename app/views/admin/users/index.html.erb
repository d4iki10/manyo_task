<h1>ユーザ一覧ページ</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">名前</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">管理者権限</th>
            <th scope="col">タスク数</th>
            <th colspan="3" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td scope="row" class="align-middle"><%= user.name %></td>
            <td class="align-middle"><%= user.email %></td>
            <td class="align-middle"><%= user.admin? ? 'あり' : 'なし' %></td>
            <td class="align-middle"><%= user.tasks.count %></td>
            <td class="align-middle">
                <%= link_to t('helpers.submit.show'), admin_user_path(user), class: 'show-user', class: "btn btn-primary" %>
                <%= link_to t('helpers.submit.edit'), edit_admin_user_path(user), class: 'edit-user', class: "btn btn-primary" %>
                <%= link_to t('helpers.submit.destroy'), admin_user_path(user), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, class: 'destroy-user', class: "btn btn-danger" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
