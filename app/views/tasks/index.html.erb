<h1><%= t('tasks.index.title') %></h1>

<table>
    <thead>
        <tr>
            <th><%= Task.human_attribute_name(:title) %></th>
            <th><%= Task.human_attribute_name(:content) %></th>
            <th><%= Task.human_attribute_name(:created_at) %></th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.content %></td>
            <td><%= task.created_at %></td>
            <td><%= link_to t('helpers.submit.show'), task %></td>
            <td><%= link_to t('helpers.submit.edit'), edit_task_path(task) %></td>
            <td><%= link_to t('helpers.submit.destroy'), task, method: :delete, data: { confirm: t('helpers.confirm.destroy') } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @tasks %>
