<h1>ログインページ</h1>

<% if flash[:alert] %>
    <div id="error_explanation">
        <ul>
            <li><%= flash[:alert] %></li>
        </ul>
    </div>
<% end %>

<%= form_with(url: sessions_path, local: true) do |form| %>
    <p>
        <%= form.label :email, 'メールアドレス' %><br>
        <%= form.email_field :email %>
    </p>

    <p>
        <%= form.label :password, 'パスワード' %><br>
        <%= form.password_field :password %>
    </p>

    <p>
        <%= form.submit 'ログイン', id: 'create-session' %>
    </p>
<% end %>
